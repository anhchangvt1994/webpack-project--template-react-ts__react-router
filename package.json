{
	"scripts": {
		"dev": "cross-env ENV=development PORT=3000 IO_PORT=3030 webpack serve --mode=development",
		"prod": "webpack --mode=production",
		"prod:esm": "cross-env ESM=true webpack --mode=production",
		"serve": "cross-env PORT=8080 NODE_NO_WARNINGS=1 node ./config/webpack.serve.config.js",
		"prettier": "tsc --noEmit && prettier src/**/*.{t,j}s{,x} --no-error-on-unmatched-pattern --check",
		"lint": "tsc --noEmit && eslint src/**/*.{t,j}s{,x} --no-error-on-unmatched-pattern --ignore-pattern node_modules/",
		"lint:fix": "npm run lint -- --fix",
		"prettier:fix": "npm run prettier -- --write",
		"format": "npm run prettier:fix && npm run lint:fix",
		"prepare": "git config core.autocrlf false && npx husky install",
		"pre-commit": "lint-staged"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead"
	],
	"overrides": {
		"isomorphic-fetch@*": "$isomorphic-fetch"
	},
	"devDependencies": {
		"@babel/core": "^7.20.2",
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.18.6",
		"@commitlint/config-conventional": "^17.2.0",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
		"@types/react": "^18.0.25",
		"@types/webpack-env": "^1.18.0",
		"autoprefixer": "^10.4.13",
		"babel-loader": "^9.1.0",
		"clean-webpack-plugin": "^4.0.0",
		"commitizen": "^4.2.5",
		"commitlint": "^17.2.0",
		"core-js": "^3.26.1",
		"cross-env": "^7.0.3",
		"css-loader": "^6.7.1",
		"css-minimizer-webpack-plugin": "^4.2.2",
		"cz-git": "^1.4.1",
		"esbuild-loader": "^2.20.0",
		"eslint": "^8.27.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-custom-alias": "^1.3.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.10",
		"eslint-plugin-react-hooks": "^4.6.0",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^8.0.2",
		"isomorphic-fetch": "^3.0.0",
		"lint-staged": "^13.0.3",
		"mini-css-extract-plugin": "^2.7.0",
		"nodemon": "^2.0.20",
		"postcss": "^8.4.18",
		"postcss-loader": "^7.0.1",
		"postcss-preset-env": "^7.8.2",
		"prettier": "^2.7.1",
		"purgecss-webpack-plugin": "^5.0.0",
		"quicktype-core": "^6.0.62",
		"react-refresh": "^0.14.0",
		"sass": "^1.56.1",
		"sass-loader": "^13.2.0",
		"socket.io": "^4.5.3",
		"tailwindcss": "^3.2.3",
		"terser-webpack-plugin": "^5.3.6",
		"unplugin-auto-import": "^0.11.4",
		"webpack": "^5.75.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.11.1"
	},
	"dependencies": {
		"polished": "^4.2.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.6.1",
		"styled-components": "^5.3.6"
	},
	"eslintConfig": {
		"extends": [
			"./config/eslint.config.js"
		]
	},
	"prettier": "./config/prettier.config.js",
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "npm run prettier && npm run lint"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"feat",
					"style",
					"test",
					"fix",
					"docs",
					"release",
					"update",
					"perf",
					"chore"
				]
			]
		}
	},
	"config": {
		"commitizen": {
			"path": "cz-git",
			"czConfig": "./config/cz.config.js"
		}
	}
}
